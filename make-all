#
# Make everything

dir=$(dirname $0)
cd "${dir}"

MAKE=make
which gmake >/dev/null 2>&1 && MAKE=gmake
export MAKE
export LD_LIBRARY_PATH=

do_bootstrap=

if [ -f configure ]; then
	if find . -type f '(' -name 'Makefile.*' -or -name 'configure.*' -or -name '*.in' ')' -newer configure | grep -q "."; then
		do_bootstrap=y
	fi
else
	do_bootstrap=y
fi
if [ "$do_bootstrap" ]; then
	./bootstrap
	./do-configure-arm
	$MAKE clean
fi

exec $MAKE -j4
